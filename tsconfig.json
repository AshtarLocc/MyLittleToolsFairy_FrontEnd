{
  "compilerOptions": {
    "target": "ESNEXT",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"],
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "**/*.d.ts",
    "src/**/*.tsx",
    "src/**/**/*.vue"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
